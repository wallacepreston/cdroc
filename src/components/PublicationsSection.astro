    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 0 1rem;
  }

  @media screen and (min-width: 40em) {
    .presentations-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 64em) {
    .presentations-grid {
      grid-template-columns: repeat(3, 1fr); /* 3-across on larger screens */
    }
  }

