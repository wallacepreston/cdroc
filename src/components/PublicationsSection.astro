---
import type { Publication } from '../types/member';
import { CATEGORY_IDS } from '../lib/wordpress';

interface Props {
  publications: Publication[];
}

const { publications } = Astro.props;

// Separate publications by category
const books = publications.filter(pub => pub.categories && pub.categories.includes(CATEGORY_IDS.BOOK));
const presentations = publications.filter(pub => pub.categories && pub.categories.includes(CATEGORY_IDS.PRESENTATION));

// Sort each category by title
const sortedBooks = books.sort((a, b) => a.title.localeCompare(b.title));
const sortedPresentations = presentations.sort((a, b) => a.title.localeCompare(b.title));
---

<div class="publications-section">
  {sortedBooks.length > 0 && (
    <div class="category-section">
      <h2 class="category-title">Author's Corner</h2>
      <div class="books-grid">
        {sortedBooks.map((publication) => (
          <div class="grid-item">
            <div class="publication-card">
              {publication.publication_url ? (
                <a href={publication.publication_url} class="publication-link" target="_blank" rel="noopener noreferrer">
                  <div class="publication-image">
                    <img src={publication.thumbnail} alt={`thumbnail for ${publication.title}`} />
                  </div>
                  <h4 class="publication-title">
                    {publication.title}
                  </h4>
                </a>
              ) : (
                <>
                  <div class="publication-image">
                    <img src={publication.thumbnail} alt={`thumbnail for ${publication.title}`} />
                  </div>
                  <h4 class="publication-title">
                    {publication.title}
                  </h4>
                </>
              )}
              {publication.author ? (
                <em>{publication.author}</em>
              ) : (
                <br />
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  )}

  {sortedPresentations.length > 0 && (
    <div class="category-section">
      <h2 class="category-title">Past Program Presentations</h2>
      <div class="presentations-grid">
        {sortedPresentations.map((publication) => (
          <div class="grid-item">
            <div class="publication-card">
              {publication.publication_url ? (
                <a href={publication.publication_url} class="publication-link" target="_blank" rel="noopener noreferrer">
                  <div class="publication-image">
                    <img src={publication.thumbnail} alt={`thumbnail for ${publication.title}`} />
                  </div>
                  <h4 class="publication-title">
                    {publication.title}
                  </h4>
                </a>
              ) : (
                <>
                  <div class="publication-image">
                    <img src={publication.thumbnail} alt={`thumbnail for ${publication.title}`} />
                  </div>
                  <h4 class="publication-title">
                    {publication.title}
                  </h4>
                </>
              )}
              {publication.author ? (
                <em>{publication.author}</em>
              ) : (
                <br />
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  )}
</div>

<style>
  .publications-section {
    padding: 2rem 0;
  }

  .category-section {
    margin-bottom: 3rem;
  }

  .category-title {
    color: #494949;
    margin-bottom: 2rem;
    font-size: 1.8rem;
    font-weight: 600;
    font-style: italic;
  }
  
  .grid-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 0 1rem;
  }

  /* Books grid - 4 across on larger screens */
  .books-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 0 1rem;
  }

  @media screen and (min-width: 40em) {
    .books-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 64em) {
    .books-grid {
      grid-template-columns: repeat(4, 1fr); /* 4-across on larger screens */
    }
  }

  /* Presentations grid - 3 across on larger screens */
  .presentations-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 0 1rem;
  }

  @media screen and (min-width: 40em) {
    .presentations-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 64em) {
    .presentations-grid {
      grid-template-columns: repeat(3, 1fr); /* 3-across on larger screens */
    }
  }

  .publication-card {
    text-align: center;
    padding: 1rem;
  }

  .publication-image img {
    max-width: 170px; /* Default max width */
    height: auto; /* Allow natural height */
    margin: 0 auto;
    object-fit: cover;
    border-radius: 4px; /* Subtle rounded corners instead of circles */
  }

  /* Presentations get wider images */
  .presentations-grid .publication-image img {
    max-width: 250px; /* Wider max width for presentations */
  }

  .publication-title {
    margin: 1rem 0 0.5rem;
    color: #494949;
    font-size: 1.1rem;
    line-height: 1.3;
  }

  .publication-link {
    display: block;
    color: #494949;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .publication-link:hover {
    opacity: 0.8;
  }

  .publication-link:hover .publication-title {
    color: #2c2c2c;
  }
</style>
